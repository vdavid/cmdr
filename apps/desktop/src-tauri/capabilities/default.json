{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "core:window:allow-start-dragging",
        "opener:default",
        {
            "identifier": "opener:allow-open-path",
            "allow": [
                {
                    "path": "**/*"
                },
                {
                    "path": "**/.*"
                }
            ]
        },
        "store:default",
        "clipboard-manager:default",
        "mcp-bridge:default",
        "drag:default",
        "fs:allow-temp-write",
        "fs:allow-remove",
        "updater:default",
        "process:allow-restart"
    ]
}