{
    "name": "@cmdr/desktop",
    "version": "0.4.0",
    "description": "",
    "type": "module",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --compiler-warnings \"a11y_no_noninteractive_element_interactions:ignore,a11y_click_events_have_key_events:ignore,a11y_no_noninteractive_tabindex:ignore,a11y_interactive_supports_focus:ignore,state_referenced_locally:ignore,non_reactive_update:ignore\"",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch --compiler-warnings \"a11y_no_noninteractive_element_interactions:ignore,a11y_click_events_have_key_events:ignore,a11y_no_noninteractive_tabindex:ignore,a11y_interactive_supports_focus:ignore,state_referenced_locally:ignore,non_reactive_update:ignore\"",
        "tauri": "node scripts/tauri-wrapper.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "stylelint": "stylelint \"src/**/*.{css,svelte}\"",
        "stylelint:fix": "stylelint \"src/**/*.{css,svelte}\" --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "test:e2e:smoke": "playwright test",
        "test:e2e:linux": "./scripts/e2e-linux.sh",
        "test:e2e:linux:native": "wdio run test/e2e-linux/wdio.conf.ts",
        "test:e2e:linux:build": "docker build -t cmdr-e2e -f test/e2e-linux/docker/Dockerfile test/e2e-linux/docker",
        "test:e2e:linux:shell": "./scripts/e2e-linux.sh --shell",
        "knip": "knip",
        "check:type-drift": "tsx scripts/check-type-drift.ts"
    },
    "license": "SEE LICENSE IN LICENSE",
    "dependencies": {
        "@crabnebula/tauri-plugin-drag": "^2.1.0",
        "@leeoniya/ufuzzy": "^1.0.19",
        "@logtape/logtape": "^2.0.0",
        "@lottiefiles/dotlottie-svelte": "^0.8.12",
        "@tauri-apps/api": "^2",
        "@tauri-apps/plugin-fs": "^2.4.4",
        "@tauri-apps/plugin-opener": "^2",
        "@tauri-apps/plugin-process": "^2.3.1",
        "@tauri-apps/plugin-store": "^2",
        "@tauri-apps/plugin-updater": "^2.9.0",
        "@tauri-apps/plugin-window-state": "~2.4.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@playwright/test": "^1.57.0",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.49.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tauri-apps/cli": "^2",
        "@testing-library/svelte": "^5.3.1",
        "@types/node": "^25.0.3",
        "@vitest/coverage-v8": "^4.0.17",
        "@wdio/cli": "^9.10.3",
        "@wdio/local-runner": "^9.10.3",
        "@wdio/mocha-framework": "^9.10.0",
        "@wdio/spec-reporter": "^9.10.0",
        "@wdio/types": "^9.10.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-svelte": "^3.13.1",
        "globals": "^16.5.0",
        "jsdom": "^27.3.0",
        "knip": "^5.77.1",
        "postcss-html": "^1.8.0",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.1",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-value-no-unknown-custom-properties": "^6.1.0",
        "svelte": "^5.46.1",
        "svelte-check": "^4.3.5",
        "svelte-eslint-parser": "^1.4.1",
        "tsx": "^4.20.3",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.50.1",
        "vite": "^7.3.0",
        "vitest": "^4.0.17"
    }
}
