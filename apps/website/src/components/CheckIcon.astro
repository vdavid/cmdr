---
interface Props {
    checked?: boolean
    class?: string
}

const { checked = false, class: className = '' } = Astro.props
---

<svg
    viewBox="0 0 20 20"
    fill="none"
    class:list={['check-icon', className]}
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
>
    <!-- Tilted rectangle frame - slightly rotated for playful feel -->
    <rect
        x="2.5"
        y="3"
        width="14"
        height="14"
        rx="2.5"
        transform="rotate(-2 9.5 10)"
        stroke="var(--color-text-tertiary)"
        stroke-width="1.5"
        fill="none"></rect>
    {
        checked && (
            <path
                d="M6 10.5 C7 11.5, 8 12.5, 9 13 C10 11, 12 8, 14.5 6"
                stroke="var(--color-accent)"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                fill="none"
            />
        )
    }
</svg>

<style>
    .check-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
    }
</style>
