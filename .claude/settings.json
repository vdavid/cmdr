{
  "mcpServers": {
    "cmdr": {
      "url": "http://localhost:9224/mcp"
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"$(git rev-parse --show-toplevel)/.claude/hooks/session-start.sh\"'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"$(git rev-parse --show-toplevel)/.claude/hooks/post-edit-format.sh\"'"
          }
        ]
      }
    ]
  }
}
